
<form class="w-75 mx-auto">
    <div class="row mb-3">
        <div class="form-group col">
            <label>First Name*</label>
            <input type="text" class="form-control" name="firstName" placeholder="First Name *">
        </div>
        <div class="form-group col">
            <label>Last Name*</label>
            <input type="text" class="form-control" name="lastName" placeholder="Last Name *">
        </div>
    </div>
    <div class="form-group col mb-3">
        <label>Email Address *</label>
        <input type="text" class="form-control" name="email" placeholder="Email Address *">
    </div>
    <div class="row mb-3">
        <div class="form-group col">
            <label>Current Password * </label>
            <input type="password" class="form-control" name="currentPassword" placeholder="Current Password * ">
        </div>
        <div class="form-group col">
            <label>New Password *</label>
            <input type="password" class="form-control" name="netPassword" placeholder="New Password *">
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-group col">
            <label>Date of Birth</label>
            <input type="date" class="form-control" name="birthDate">
        </div>
        <div class="form-group col">
            <label>Gender</label><br />
            <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="gender" id="btnMale" autocomplete="off" checked>
                <label class="btn btn-outline-dark w-100" for="btnMale">Male</label>

                <input type="radio" class="btn-check" name="gender" id="btnFemale"  autocomplete="off">
                <label class="btn btn-outline-dark w-100" for="btnFemale">Female</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-black">Save Changes</button>
</form>