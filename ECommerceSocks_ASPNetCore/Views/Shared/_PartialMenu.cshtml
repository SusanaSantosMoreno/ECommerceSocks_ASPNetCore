@{
    var favs = Context.Session.GetInt32("favs") == null ? 0 : Context.Session.GetInt32("favs");
    var cartItems = Context.Session.GetInt32("cartItems") == null ? 0 : Context.Session.GetInt32("cartItems");
}
<div class="me-5 row nav-icons">
    <!--<i class='bx bx-search bx-sm text-end col nav-icon m-auto'></i>-->
    <a class="col nav-icon m-auto text-center mt-2" asp-action="Index" asp-controller="Favorites">
        @if (favs > 0) {
            <span data-fav="@favs">
                <i class='bx bx-heart bx-sm'></i>
            </span>
        } else {
            <i class='bx bx-heart bx-sm'></i>
        }
    </a>
    @if (Context.User.Identity.IsAuthenticated) {
        <a class="user-icon mx-2" style="margin-top: 7px; color:white !important;"
           asp-action="Index" asp-controller="Identity">
            <span class="user_letter">@User.Identity.Name.ToUpper()[0]</span>
        </a>
    } else {
        <a class="col nav-icon m-auto text-center mt-2" asp-action="Index" asp-controller="Identity">
            <i class='bx bx-user bx-sm' id="loginBtn"></i>
        </a>
    }
    <a class="col nav-icon m-auto text-center mt-2" asp-action="Index" asp-controller="Cart">
        @if (cartItems > 0) {
            <span data-fav="@cartItems">
                <i class='bx bx-shopping-bag bx-sm'></i>
            </span>
        } else {
            <i class='bx bx-shopping-bag bx-sm'></i>
        }

    </a>
</div>
