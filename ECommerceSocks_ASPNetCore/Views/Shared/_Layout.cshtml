<!DOCTYPE html>
<html>
<head>
    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
          crossorigin="anonymous" />
    <!--BOXICONS-->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!--GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400;500;600;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Yellowtail&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link href="~/lib/css/layout.css" rel="stylesheet" />

    <environment names="Development">
        <link href="~/lib/css/site.css" rel="stylesheet" />
    </environment>

    <!--FAVICON-->
    @await Html.PartialAsync("_Favicons")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light shadow-sm bg-white">
        <div class="container">
            <a class="navbar-brand pe-5 brand-font" asp-action="Index" asp-controller="Home">Pretty Socks</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse ps-5" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item me-5">
                        <a class="nav-link" asp-action="Index" asp-controller="CategorySection"
                           asp-route-category_id="1" >
                            <span class="letter-spacing">MEN</span>
                        </a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link" asp-action="Index" asp-controller="CategorySection"
                           asp-route-category_id="2" >
                            <span class="letter-spacing">WOMEN</span>
                        </a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link" asp-action="Index" asp-controller="CategorySection"
                           asp-route-category_id="3" >
                            <span class="letter-spacing">KIDS</span>
                        </a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link" href="#">
                            <span class="letter-spacing">PACKS</span>
                        </a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link" href="#">
                            <span class="letter-spacing">OUTLET</span>
                        </a>
                    </li>
                    <li class="w-50 mx-auto row nav-icons">
                        <i class='bx bx-search bx-sm text-end col nav-icon m-auto'></i>
                        <i class='bx bx-heart bx-sm text-center col nav-icon m-auto'></i>
                        <i class='bx bx-user bx-sm text-center col nav-icon m-auto'
                           data-bs-toggle="modal" data-bs-target="#userModal"></i>
                        <i class='bx bx-shopping-bag bx-sm col pe-0 nav-icon m-auto'></i>
                    </li>

                </ul>
            </div>

        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer id="footer" class="pt-3 pb-3">
        <div class="container-lg mt-5">
            <h2 class="text-center">Hey, let’s keep in touch!</h2>
            <h6 class="text-center">Stay in the know when you sign up for our newsletter!</h6>
            <div class="row m-auto mt-3 w-50">
                <input type="email" class="form-control col-auto w-50"
                       id="exampleInputEmail1" aria-describedby="emailHelp"
                       placeholder="Email Address">
                <button type="button" class="btn btn-outline-dark col-auto w-50">Subscribe</button>
                <div id="emailHelp" class="form-text text-center">
                    By entering your email address you will
                    receive promotional updates.
                    Consent is not a condition of purchase. View <a href="#">Privacy Policy</a>.
                </div>
            </div>
        </div>
        <div class="container-lg row mt-3 m-auto w-25">
            <a href="#" class="col-auto"><i class='bx bxl-facebook-square bx-md'></i></a>
            <a href="#" class="col-auto"><i class='bx bxl-instagram-alt bx-md'></i></a>
            <a href="#" class="col-auto"><i class='bx bxl-twitter bx-md'></i></a>
            <a href="#" class="col-auto"><i class='bx bxl-pinterest-alt bx-md'></i></a>
            <a href="#" class="col-auto"><i class='bx bxl-youtube bx-md'></i></a>
        </div>
        <div class="container-lg row mt-4 m-auto w-30">
            <div class="col">
                <ul>
                    <li><h5>HELP</h5></li>
                    <li>
                        <a href="#">FAQS</a>
                    </li>
                    <li>
                        <a href="#">Order Shipments</a>
                    </li>
                    <li>
                        <a href="#">Returns & Exchanges</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="col">
                <ul>
                    <li><h5>WHO WE ARE!</h5></li>
                    <li>
                        <a href="#">About us</a>
                    </li>
                    <li>
                        <a href="#">Stores</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="border:none;">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pb-5">
                    <div id="login">
                        <h4 class="text-center">Welcome</h4>
                        <h2 class="text-center">DO YOU HAVE AN ACCOUNT?</h2>
                        <form method="post" class="w-75 mx-auto mt-3" id="loginForm">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">EMAIL ADDRESS *</label>
                                <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                                       placeholder="Email Address *">
                                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">PASSWORD *</label>
                                <input type="password" class="form-control" id="inputPassword"
                                       placeholder="Password *">
                            </div>
                            <a class="text-dark" href="#" id="forgotPasswordLink">Forgot your password?</a>
                            <button type="submit" class="btn btn-outline-dark w-100 mb-3 mt-3">LOGIN</button>
                            <div class="w-100 text-center">
                                <a class="text-dark" href="#">New customer? Sign up </a>
                            </div>
                        </form>
                    </div>
                    <div id="forgotPassword">
                        <h5 class="text-center">Enter your email to change your password.</h5>
                        <form method="post" class="w-75 mx-auto mt-3" id="forgotForm">
                            <div class="mb-3">
                                <label for="inputEmailForgot" class="form-label">EMAIL ADDRESS *</label>
                                <input type="email" class="form-control" id="inputEmailForgot" aria-describedby="emailHelp"
                                       placeholder="Email Address *">
                                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            </div>
                            <button type="submit" class="btn btn-outline-dark w-100 mb-3 mt-3">RESET PASSWORD</button>
                            <div class="w-100 text-center">
                                <a class="text-dark" href="#" id="ReturnLoginLink">Return to Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <environment names="Development">
        <!-- JQUERY -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.js"
                integrity="sha256-DrT5NfxfbHvMHux31Lkhxg42LY6of8TaYyK50jnxRnM="
                crossorigin="anonymous"></script>
        <!-- BOOTSTRAP -->
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js" 
                integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" 
                integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        <script src="~/lib/js/site.js"></script>
    </environment>
    
</body>
</html>