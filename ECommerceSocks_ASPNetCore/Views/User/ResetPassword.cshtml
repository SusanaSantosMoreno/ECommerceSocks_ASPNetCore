<div class="mt-5 pt-10 pb-10" id="loginBackground">
    <div class="card mx-auto w-50">
        <div class="card-body p-5">
            <div id="forgotPassword">
                <h3 class="text-center">Enter the new password.</h3>
                <form method="post" class="w-75 mx-auto mt-3">
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">PASSWORD *</label>
                        <input type="password" class="form-control" id="inputPassword" name="password"
                               placeholder="Password *">
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">REPEAT PASSWORD *</label>
                        <input type="password" class="form-control" id="inputPassword" name="repeatPassword"
                               placeholder="Repeat Password *">
                    </div>
                    <button type="submit" class="btn btn-outline-dark w-100 mb-3 mt-3">RESET PASSWORD</button>
                    <div class="w-100 text-center">
                        <a class="text-dark ReturnLoginLink" asp-action="Login" 
                           asp-controller="User">Return to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>