
@{
    ViewData["Title"] = "Login";
}
<div class="mt-5 pt-10 pb-10" id="loginBackground">
    <div class="card mx-auto w-50 shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <div id="login">
                <h4 class="text-center">Welcome</h4>
                <h2 class="text-center">DO YOU HAVE AN ACCOUNT?</h2>
                <form method="post" class="w-75 mx-auto mt-3" id="loginForm">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">EMAIL ADDRESS *</label>
                        <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                               placeholder="Email Address *" name="email">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">PASSWORD *</label>
                        <input type="password" class="form-control" id="inputPassword" name="password"
                               placeholder="Password *">
                    </div>
                    <a class="text-dark" asp-action="ForgotPassword" asp-controller="User" 
                       id="forgotPasswordLink">Forgot your password?</a>
                    <button type="submit" class="btn btn-outline-dark w-100 mb-3 mt-3">LOGIN</button>
                    <div class="w-100 text-center">
                        <a class="text-dark" asp-action="SignUp" asp-controller="User" id="signUpLink">New customer? Sign up </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


